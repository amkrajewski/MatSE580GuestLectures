{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
      "ghcr.io/devcontainers/features/conda:1": {}
    },
    "customizations": {
      "codespaces": {
        "openFiles": [
          "README.md",
          "Lecture1.ipynb",
          "Lecture2.ipynb"
        ]
      },
      "vscode": {
        "extensions": [
          "wijmo.gc-excelviewer",
          "mechatroner.vscode_rainbow_csv",
          "ms-python.python",
          "ms-toolsai.jupyter"
        ]
      }
    },
    "hostRequirements": {
       "cpus": 4,
       "memory": "16gb",
       "storage": "12gb"
    },
    "onCreateCommand": "conda create -y -n 580demo python=3.10 jupyter numpy scipy && conda init bash && . /home/codespace/.bashrc && conda activate 580demo && pip install -y pymatgen pysipfenn pymongo scikit-learn"
}
