{
    "image": "mcr.microsoft.com/devcontainers/miniconda",
    "customizations": {
      "codespaces": {
        "openFiles": [
          "README.md",
          "Lecture1.ipynb",
          "Lecture2.ipynb"
        ]
      },
      "vscode": {
        "extensions": [
          "wijmo.gc-excelviewer",
          "mechatroner.vscode_rainbow_csv",
          "ms-python.python",
          "ms-toolsai.jupyter"
        ]
      }
    },
    "hostRequirements": {
       "cpus": 4,
       "memory": "16gb",
       "storage": "12gb"
    },
    "onCreateCommand": "conda install -y python=3.10 jupyter numpy scipy && pip install pymatgen pysipfenn pymongo scikit-learn"
}
